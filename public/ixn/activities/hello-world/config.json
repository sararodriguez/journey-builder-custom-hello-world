{
    "workflowApiVersion": "1.0",
    "type": "MOBILE",
    "lang": {
        "en-US": {
            "name": "My Custom Activity",
            "description": "This activity will make the world a better place"
        }
    },
    "arguments": {
        "execute": {
            "inArguments": [
                {
                    "contactFirstName": "{{Contact.Default.FirstName}}"
                },
                {
                    "contactLastName": "{{Contact.Default.LastName}}"
                },
                {
                    "emailAddress": "{{InteractionDefaults.Email}}"
                }
            ],
            "outArguments": [
                {
                    "name": ""
                }
            ],
            "url": "https://app-baz.herokuapp.com/ixn/activities/execute"
        }
    },
    "configurationArguments": {
        "applicationExtensionKey": "sr-hello-world-activity-srodriguez",
        "save": {
        },
        "publish": {
        },
        "validate": {
        },
        "edit": {
            "uri": "https://app-baz.herokuapp.com/ixn/activities/hello-world",
            "height": 350,
            "width": 550
        }
    }
}